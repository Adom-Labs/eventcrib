model Category {
  id            String @id @default(uuid())
  slug          String @unique
  category_name String
}

model Event {
  id           String   @id @default(uuid())
  user_address String
  event_name   String
  event_desc   String
  event_info   String   @db.Text
  event_type   String
  website      String
  location     String
  price        Int
  attendees    Int
  start_date   String
  end_date     String
  time         String
  banner       String
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Booking {
  id           String   @id @default(uuid())
  user_address String
  event_id     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Todo {
  id           String   @id @default(uuid())
  user_address String
  task         String
  completed    Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
