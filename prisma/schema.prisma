datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Category {
  id            String @id @default(uuid())
  slug          String @unique
  category_name String
}

model Event {
  id           String   @id @default(uuid())
  user_address String   @unique
  event_name   String
  event_desc   String
  event_info   String   @db.Text
  event_type   String
  website      String
  location     String
  price        Int
  attendees    Int
  start_date   String
  end_date     String
  time         String
  banner       String
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
