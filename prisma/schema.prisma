// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id            String @id @default(uuid())
  slug          String @unique
  category_name String
}

model Event {
  id           String   @id @default(uuid())
  user_address String   @unique
  event_name   String
  event_desc   String
  event_info   String   @db.LongText
  event_type   String
  website      String
  location     String
  price        Int
  attendees    Int
  start_date   String
  end_date     String
  time         String
  banner       String
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
